FROM node:20.19.0

# Install build tools
# RUN apt-get update && apt-get install -y \
#     build-essential \
#     python3 \
#     && rm -rf /var/lib/apt/lists/*

WORKDIR /country-app

# Copy only package files first
COPY package*.json ./

# Ensure clean build of native modules
RUN npm i

# Copy rest of the app
COPY . .

# Build the Nuxt app
RUN npm run build

CMD ["npm", "run", "preview"]